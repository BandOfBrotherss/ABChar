<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abchar.ScreenActivities.MainActivity">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/facebook_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="login_with_facebook"
            android:scaleType="fitXY"
            android:src="@drawable/face" />

        <ImageButton
            android:id="@+id/twitter_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/facebook_button"
            android:contentDescription="login_with_twitter"
            android:scaleType="fitXY"
            android:src="@drawable/twitter" />

        <ImageButton
            android:id="@+id/google_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/twitter_button"
            android:contentDescription="login_with_google"
            android:scaleType="fitXY"
            android:src="@drawable/google" />

        <ImageButton
            android:id="@+id/mail_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/google_button"
            android:scaleType="fitXY"
            android:src="@drawable/email" />

    </RelativeLayout>

</RelativeLayout>



